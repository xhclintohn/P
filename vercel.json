{
  "version": 2,
  "installCommand": "npm install && cd client && npm install",
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "src/**,utils/**,middlewares/**,config/**,function.js,metadata.json,endpoints.json"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/ai/(.*)", "destination": "/api/index" },
    { "source": "/download/(.*)", "destination": "/api/index" },
    { "source": "/random/(.*)", "destination": "/api/index" },
    { "source": "/tools/(.*)", "destination": "/api/index" },
    { "source": "/metrics", "destination": "/api/index" },
    { "source": "/health", "destination": "/api/index" },
    { "source": "/status", "destination": "/api/index" },
    { "source": "/endpoints", "destination": "/api/index" },
    { "source": "/((?!api|ai|download|random|tools|metrics|health|status|endpoints).*)", "destination": "/index.html" }
  ]
}
